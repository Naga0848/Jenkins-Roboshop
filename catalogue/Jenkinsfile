pipeline {
    agent {
        label 'AGENT-1'
    }
     environment { 
        appVersion = ''
        REGION = "us-east-1"
        ACC_ID = "843303282697"
        PROJECT = "roboshop"
        COMPONENT = "catalogue"
     }
     dir "{catalogue}"
    stages {
        stage('Read package.json') {
            steps {
                script {
                    sh """
                        cd catalogue
                        ls -ltr 
                        pwd
                        """
                    def packageJson = readJSON file: 'package.json'
                    appVersion = packageJson.version
                    echo "Package version: ${appVersion}"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}